{
  "name": "tanker",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build:all": "yarn build:crypto && yarn build:errors && yarn build:file-ponyfill && yarn build:file-reader && yarn build:streams && yarn build:identity && yarn build:core && yarn build:datastores && yarn build:client-browser && yarn build:client-node && yarn build:ui",
    "build:client-browser-base": "rollup --config packages/client-browser/config/rollup.js",
    "build:client-browser-umd": "webpack --config packages/client-browser/config/webpack.config.js",
    "build:client-browser": "yarn build:client-browser-base && yarn build:client-browser-umd",
    "build:client-node": "rollup --config packages/client-node/config/rollup.js",
    "build:core": "rollup --config packages/core/config/rollup.js",
    "build:identity": "rollup --config packages/identity/config/rollup.js",
    "build:crypto": "rollup --config packages/crypto/config/rollup.js",
    "build:datastores": "rollup --config packages/datastore/config/rollup.js",
    "start:emails": "cd packages/emails; yarn start",
    "build:emails": "cd packages/emails; yarn build",
    "build:errors": "rollup --config packages/errors/config/rollup.js",
    "build:file-ponyfill": "rollup --config packages/file-ponyfill/config/rollup.js",
    "build:file-reader": "rollup --config packages/file-reader/config/rollup.js",
    "build:streams": "rollup --config packages/stream/config/rollup.js",

    "build:storage": "rollup --config packages/storage/config/rollup.js",
    "build:fake-authentication": "rollup --config packages/fake-authentication/config/rollup.js",
    "build:filekit": "rollup --config packages/filekit/config/rollup.js",

    "build:verification-ui-base": "rollup --config packages/verification-ui/config/rollup.js",
    "build:verification-ui-umd": "webpack --config packages/verification-ui/config/webpack.config.production.js",
    "build:verification-ui": "yarn build:verification-ui-base && yarn build:verification-ui-umd",
    "start:verification-ui": "webpack-dev-server -w --hot --config packages/verification-ui/config/webpack.config.development.js",
    "lint:js": "eslint \"packages/**/*.js\"",
    "lint:flow": "flow check",
    "test": "mocha \"packages/**/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:core": "mocha \"packages/core/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:identity": "mocha \"packages/identity/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:crypto": "mocha \"packages/crypto/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:datastore-base": "mocha \"packages/datastore/base/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:datastore-pouchdb-memory": "mocha \"packages/datastore/pouchdb-memory/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:datastore-pouchdb-node": "mocha \"packages/datastore/pouchdb-node/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:errors": "mocha \"packages/errors/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:streams": "mocha \"packages/stream/**/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "test:fake-authentication": "mocha \"packages/fake-authentication/**/src/**/*.spec{,.node}.js\" --exit --require ./config/tests/babel.setup.js --recursive --full-trace --trace-warnings --reporter=spec",
    "karma": "karma start config/karma/karma.config.ci.js",
    "debug": "karma start config/karma/karma.config.debug.js",
    "debug:core": "karma start packages/core/config/karma.config.debug.js",
    "debug:crypto": "karma start packages/crypto/config/karma.config.debug.js",
    "debug:errors": "karma start packages/errors/config/karma.config.debug.js",
    "debug:streams": "karma start packages/stream/config/karma.config.debug.js",
    "proof": "yarn lint:js && yarn lint:flow && yarn test",
    "coverage": "nyc --reporter=lcov --reporter=text-summary yarn test"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "7.4.4",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.6",
    "babel-plugin-istanbul": "5.1.4",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.5.0",
    "colorette": "^1.0.7",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-chai-expect": "^2.0.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-flowtype": "^3.9.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "0.98.1",
    "fs-extra": "^8.0.1",
    "karma": "4.1.0",
    "karma-browserstack-launcher": "1.4.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-opera-launcher": "^1.0.0",
    "karma-safarinative-launcher": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.0-rc.6",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rollup": "^1.12.5",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-local-resolve": "1.0.7",
    "sinon": "^4.5.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.7.2"
  },
  "workspaces": [
    "packages/*",
    "packages/datastore/*",
    "packages/stream/*"
  ],
  "nyc": {
    "exclude": [
      "config",
      "packages/*/config",
      "packages/**/*.spec.js",
      "packages/**/*.spec.node.js",
      "packages/**/*.spec.web.js",
      "packages/functional-tests",
      "packages/**/src/__tests__",
      "packages/**/tests"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
