{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../src",
    "declarationDir": "../dist/types",
    // We do feature checks against different standards
    // "lib" tells tsc what will be available at runtime
    "lib": ["DOM", "WebWorker"],
  },
  "exclude": [
    "../**/__tests__/*",
  ],
  "references": [
    { "path": "./tsconfig.browser.json" },
    { "path": "./tsconfig.es.json" },
    { "path": "./tsconfig.node.json" },
  ],
  "files": [], // "files" MUST be kept empty. This is a _meta_ tsconfig and should not generate anything by itself.
}
