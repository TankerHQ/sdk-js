{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/browser",
    // Necessary target for IE11
    "target": "ES5",
    "module": "commonjs",
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": [
      "DOM",
      // needed by the umd (@tanker/global-this)
      "WebWorker",
    ]
  },
  "include": [
    "../src/**/*",
  ],
}
